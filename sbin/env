#!/bin/bash
# shellcheck disable=SC2139

PS1="= [\u@\h :: \w] "

root=/opt/leginon-manager
poetry=/usr/local/bin/poetry

alias c=clear
alias r="cd $root; clear"

alias ls="\ls -F"
alias ll="\ls -l -F"

alias ver="$root/sbin/version"
alias s="git status"

alias p="$poetry"
alias psh="$poetry shell"
alias prun="$poetry run python"
